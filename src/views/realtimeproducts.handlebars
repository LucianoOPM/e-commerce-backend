<header>
  <div class="container-fluid text-center nav-header mb-4">
    <div class="row row-content">
      <div class="col">
        <h1>E-Commerce</h1>
      </div>
      <div class="col">
        <h1>Lista de productos</h1>
      </div>
      <span class="col">
        <ul>
          <li>Chat</li>
          <li>Products</li>
          <li>Cart</li>
        </ul>
      </span>
    </div>
  </div>
</header>

<main>
  <div class="container form-products">
    <div class="row">
      <div class="col">
        <form id="addForm">
          <div class="input-group my-3">
            <span
              class="input-group-text"
              id="inputGroup-sizing-default"
              for="title"
            >Producto:</span>
            <input
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
              placeholder="Titulo del producto"
              name="title"
              required
            />
          </div>

          <div class="input-group">
            <span class="input-group-text mb-3">Descripción:</span>
            <textarea
              class="form-control mb-3"
              style="resize: none;"
              aria-label="With textarea"
              name="description"
              placeholder="Descripción del producto"
            ></textarea>
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input
              type="number"
              name="price"
              placeholder="Precio del producto"
              min="0"
              class="form-control"
              aria-label="Amount (to the nearest dollar)"
              required
            />
            <span class="input-group-text">.00</span>
          </div>

          <div class="input-group mb-3">
            <input
              type="file"
              class="form-control"
              id="inputGroupFile02"
              name="thumbnail"
            />
          </div>

          <div class="input-group mb-3">
            <span
              class="input-group-text"
              id="inputGroup-sizing-default"
              for="code"
            >Código:</span>
            <input
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
              name="code"
              placeholder="Código del producto"
              required
            />
          </div>

          <div class="input-group mb-3">
            <span class="input-group-text">Disponibles:</span>
            <input
              type="number"
              name="stock"
              placeholder="Disponibles"
              min="0"
              class="form-control"
              required
            />
          </div>

          <div class="form-check check-input mb-3">
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="flexCheckDefault"
              name="status"
            />
            <label class="form-check-label" for="flexCheckDefault">
              Status
            </label>
          </div>

          <div class="input-group mb-3">
            <span
              class="input-group-text"
              id="inputGroup-sizing-default"
              for="category"
            >Categoría:</span>
            <input
              type="text"
              class="form-control"
              aria-label="Sizing example input"
              aria-describedby="inputGroup-sizing-default"
              placeholder="Categoría del producto"
              name="category"
              required
            />
          </div>

          <div class="d-grid gap-2">
            <button
              class="btn btn-primary"
              type="button"
              id="addProducts"
            >Agregar Producto</button>
          </div>
        </form>
      </div>
    </div>

  </div>
  <div id="newProducts"></div>
  <div id="pagination"></div>

  <div class="delete">
    <h1>Eliminar productos</h1>
    <form id="deleteProducts" class="add__form">
      <input
        type="text"
        name="id"
        id="eraseProduct"
        placeholder="id del articulo a eliminar"
      />
      <button
        id="deleteButton"
        style="background-color: red; color:black;"
      >ELIMINAR</button>
    </form>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/static/js/{{script}}"></script>
</main>