<header>
  <nav class="navbar custom-navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <span class="navbar-brand">E-Commerce</span>
      <ul class="navbar-nav custom-nav-ul me-auto mb-2 mb-lg-0">
        {{#if logged}}
          <li class="nav-item">
            <a class="nav-link" href="/login">Carrito</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">Contacto</a>
          </li>
        {{else}}
          <li class="nav-item">
            <a class="nav-link" href="/cart/{{cartID}}">Carrito</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/chat">Contacto</a>
          </li>
        {{/if}}
        {{#if addProducts}}
          <li class="nav-item">
            <a class="nav-link" href="/realtimeproducts">Agregar productos</a>
          </li>
        {{/if}}
      </ul>
      <div class="me-auto mt-2">
        <form class="d-flex" role="search">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search Product"
            aria-label="Search"
          />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
      </div>
      <div>
        {{#if logged}}
          <a href="/login">
            <button class="btn btn-outline-success login-button">Iniciar Sesion</button>
          </a>
        {{else}}
          <div class="me-auto mt-2 user-info">{{! contact info }}
            <span class="navbar-brand">Hola!
              {{first_name}}
              {{last_name}}
              tu rol es:
              {{role}}</span>
          </div>
          <a href="/logout">
            <button
              class="btn btn-outline-success logout-button"
              id="logout"
            >Cerrar Sesion</button>
          </a>
        {{/if}}
      </div>
    </div>
  </nav>
</header>
{{! Si hay una sesion activa, cerrar sesion }}
<main>
  {{#each products}}
    <div class="card mb-3 mt-3 products" style="max-width: 750px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img
            src="{{this.thumbnail}}"
            class="img-fluid rounded-start img-size"
            alt="{{this.category}}"
          />
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Producto:
              <a href="/products/{{this.PID}}">{{this.title}}</a></h5>
            <p class="card-text">Description: {{this.description}}</p>
            <p class="card-text">Price: {{this.price}}</p>
            <p class="card-text"><small class="text-body-secondary">Disponibles:
                {{this.stock}}</small></p>
            <a href="/products/{{this.PID}}"><button
                class="btn btn-outline-success buy-button"
              >Comprar</button></a>
          </div>
        </div>
      </div>
    </div>

  {{/each}}
  <nav aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
      <li class="page-item">{{! disabled }}
        <a
          class="page-link"
          href="{{prevLink}}"
          tabindex="-1"
          aria-disabled="true"
        >Previous</a>
      </li>
      <li class="page-item">
        <a class="page-link" href="{{nextLink}}">Next</a>
      </li>
    </ul>
  </nav>
</main>
<script src="/static/js/{{script}}"></script>